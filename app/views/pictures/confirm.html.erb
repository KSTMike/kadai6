<h1>confirmation screen</h1>
<%= form_with(model: @picture, url: pictures_path, local: true) do |form| %>
  <!-- 確認画面でアップロードした画像を表示させるための記述 -->
  <%= image_tag(@picture.image.url) if @picture.image && @picture.image.url %>
  <%= form.hidden_field :image_cache %>
  <%= form.hidden_field :title %>
  <%= form.hidden_field :content %>
  <%= form.submit "Post" %>
<% end %>

<%= form_with(model:@picture, url:new_picture_path, local:true, method:"get") do |form| %>
  <%= form.hidden_field :image_cache %>
  <%= form.submit "Return", name: "back" %>
<% end %>

<h3>Post with the following contents.</h3>

<%= form_with(model: @picture, local: true) do |form| %>
<%= form.hidden_field :title %>
<%= form.hidden_field :content %>

  <p>TITLE:<%= @picture.title %></p>
  <p>CONTENTS:<%= @picture.content %></p>

<% end %>